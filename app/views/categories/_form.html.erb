<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>
    <%= f.label :category %>
    <%= f.text_field :name, placeholder: "Enter category name", autofocus: true %>
    <br />
    <%= f.label :parent %>
    <%= f.collection_select(:parent_id, Category.where(parent_id: nil), :id, :name, prompt: true) %>
    <br />
    <%= f.submit %>
<% end %>
<%= link_to "Cancel request and return to merchandises listing", merchandises_path %>
