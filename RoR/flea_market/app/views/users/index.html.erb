<h1 align="center">Users Listing</h1>
<div align="center">
    <% @users.each do |user| %>
    <div>
        <p class="merchandise-title"><%= link_to user.username, user_path(user) %>
        <br />
        <small><%= pluralize(user.merchandises.count, "merchandise") if user.merchandises %></small>
        <br />
        <% if logged_in? && current_user.admin?%>
          <%= link_to "Delete this user", user_path(user), method: :delete,
              data: { confirm:"Are you sure you want to delete the user and all their merchandises?"} %>
        <% end %>
        </p>
    </div>
    <% end %>
</div>